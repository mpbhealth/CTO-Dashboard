# Supabase Configuration
# Copy this file to .env and fill in your Supabase credentials
# If these values are not provided, the app will use mock data for development

VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Public Upload Token (optional - for department CSV uploads without authentication)
# If not set, public uploads will be disabled
VITE_PUBLIC_UPLOAD_TOKEN=

# Development Mode (uses mock data when Supabase is not configured)
VITE_DEVELOPMENT_MODE=true

# CEO Dashboard Mock Data (set to true to use mock data instead of Supabase queries)
VITE_USE_MOCK_DATA=false