{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true,
    "composite": true,
    "noEmit": false
  },
  "include": [
    "src/transform.ts",
    "src/schemas.ts",
    "src/lookups.ts",
    "src/transform/**/*.ts"
  ]
}